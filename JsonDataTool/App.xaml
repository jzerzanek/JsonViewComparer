<Application x:Class="JsonDataTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:JsonDataTool.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <converters:IconConverter x:Key="IconConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                
                <ResourceDictionary Source="Resources/Icons/NoneIcon.xaml"/>
                <ResourceDictionary Source="Resources/Icons/AddIcon.xaml"/>
                <ResourceDictionary Source="Resources/Icons/ReloadIcon.xaml"/>
                <ResourceDictionary Source="Resources/Icons/RemoveIcon.xaml"/>
                <ResourceDictionary Source="Resources/Icons/CompareIcon.xaml"/>
                <ResourceDictionary Source="Resources/Icons/SaveIcon.xaml"/>
                <ResourceDictionary Source="Resources/Icons/ReformatIcon.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
